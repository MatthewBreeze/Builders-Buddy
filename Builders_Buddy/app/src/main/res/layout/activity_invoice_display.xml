<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Invoice.InvoiceDisplay"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    >


    <ImageView
        android:id="@+id/Title"
        android:layout_width="189dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="30dp"
        android:textColor="@android:color/black"
        ></TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            ></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_break"
            android:layout_marginRight="15dp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manHours"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            ></TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_break"
            android:layout_marginRight="15dp"
            ></ImageView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:id="@+id/materialsheader"
            android:textColor="@android:color/background_dark"
            android:text=" Materials"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/qtyheader"
            android:textColor="@android:color/background_dark"
            android:text="QTY"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/PriceHeader"
            android:textColor="@android:color/background_dark"
            android:text="Price"
            android:textSize="20dp"
            ></TextView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:id="@+id/materialslist"
            android:textColor="@android:color/background_dark"
            android:text="fill"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:layout_width="80dp"
            android:layout_height="200dp"
            android:id="@+id/qtylis"
            android:textColor="@android:color/background_dark"
            android:text="fill"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:layout_width="80dp"
            android:layout_height="200dp"
            android:id="@+id/Pricelist"
            android:textColor="@android:color/background_dark"
            android:text="fill"
            android:textSize="20dp"
            ></TextView>



    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_break"
        android:layout_marginRight="15dp"
        ></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        ></TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_break"
        android:layout_marginRight="15dp"
        ></ImageView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:text="Delete Invoice"
        android:background="@drawable/roundedbutton"
        android:textColor="@android:color/darker_gray"
        android:onClick="Del"
        ></Button>

</LinearLayout>